<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.ThongTinSinhVien">

    <TableLayout
        android:id="@+id/tablayoutButton"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_weight="1"
        android:background="@drawable/silver"
        android:shrinkColumns="*"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_weight=".1"
                android:adjustViewBounds="false"
                android:background="@drawable/profile_image_background"
                android:scaleType="centerCrop"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/zerothevoid" />

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/table_layout_background">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:paddingTop="25dp">

                    <Button
                        android:id="@+id/btnLogoutSV"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight=".45"
                        android:background="@drawable/button_background"
                        android:scaleType="centerInside"
                        android:text="ĐĂNG XUẤT"
                        android:textColor="#040750"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/btnXemLichSV"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight=".45"
                        android:background="@drawable/button_background"
                        android:scaleType="centerInside"
                        android:text="XEM LỊCH HỌC"
                        android:textColor="#040750"
                        android:textStyle="bold"
                        tools:layout_editor_absoluteX="72dp"
                        tools:layout_editor_absoluteY="344dp" />
                </TableRow>

            </TableLayout>
        </TableRow>

    </TableLayout>

    <ScrollView
        android:id="@+id/scrollViewThongTinSV"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#e4e4e4"
        app:layout_constraintBottom_toTopOf="@+id/tablayoutMonTiepTheo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tablayoutButton"
        app:layout_constraintVertical_bias="0.0">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/txtViewTitleSV"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@drawable/ttgv_background"
                    android:paddingTop="5dp"
                    android:text="THÔNG TIN CÁ NHÂN"
                    android:textAlignment="center"
                    android:textColor="#040750"
                    android:textSize="20dp"
                    android:textStyle="bold" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="2dp">

                <TextView
                    android:id="@+id/labelMaSV"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".355"
                    android:text="Mã SV"
                    android:textColor="#040750"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtViewMaSV"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".65"
                    android:textColor="#040750"
                    android:textSize="20dp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="2dp">

                <TextView
                    android:id="@+id/labelTenSV"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".355"
                    android:text="Tên"
                    android:textColor="#040750"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtViewTenSV"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".655"
                    android:textColor="#040750"
                    android:textSize="20dp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="2dp">

                <TextView
                    android:id="@+id/labelNgaySinhSV"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".35"
                    android:text="Ngày sinh"
                    android:textColor="#040750"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtViewNgaySinhSV"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".65"
                    android:textColor="#040750"
                    android:textSize="20dp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="2dp">

                <TextView
                    android:id="@+id/labelGioiTinhSV"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".35"
                    android:text="Giới tính"
                    android:textColor="#040750"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtViewGioiTinhSV"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".65"
                    android:textColor="#040750"
                    android:textSize="20dp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="2dp">

                <TextView
                    android:id="@+id/labelSDTSV"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".35"
                    android:text="SĐT"
                    android:textColor="#040750"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtViewSDTSV"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".65"
                    android:textColor="#040750"
                    android:textSize="20dp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="2dp">

                <TextView
                    android:id="@+id/labelEmailSV"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".35"
                    android:text="Email"
                    android:textColor="#040750"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtViewEmailSV"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".65"
                    android:textColor="#040750"
                    android:textSize="20dp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="2dp">

                <TextView
                    android:id="@+id/labelLopSV"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".35"
                    android:text="Lớp"
                    android:textColor="#040750"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtViewTenLopSV"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".65"
                    android:textColor="#040750"
                    android:textSize="20dp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="2dp">

                <TextView
                    android:id="@+id/labelTrinhDoSV"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".35"
                    android:text="Trình độ"
                    android:textColor="#040750"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtViewTrinhDoSV"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".65"
                    android:textColor="#040750"
                    android:textSize="20dp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="2dp">

                <TextView
                    android:id="@+id/labelChucVuSV"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".35"
                    android:text="Chức vụ"
                    android:textColor="#040750"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtViewChucVuSV"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".65"
                    android:textColor="#040750"
                    android:textSize="20dp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="2dp">

                <TextView
                    android:id="@+id/labelKhoaSV"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".35"
                    android:text="Khoa"
                    android:textColor="#040750"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtViewKhoaSV"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".65"
                    android:textColor="#040750"
                    android:textSize="20dp" />
            </TableRow>

        </TableLayout>
    </ScrollView>

    <TableLayout
        android:id="@+id/tablayoutMonTiepTheo"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/table_qr_background"
        android:shrinkColumns="*"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scrollViewThongTinGV">

        <TableRow
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/table_layout_background"
            android:padding="10dp">

            <TextView
                android:id="@+id/txtViewTitleMonHocTiepTheo"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@drawable/ttgv_background"
                android:paddingTop="5dp"
                android:text="MÔN HỌC HIỆN TẠI"
                android:textAlignment="center"
                android:textColor="#040750"
                android:textSize="22dp"
                android:textStyle="bold" />
        </TableRow>

        <TableRow
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="3dp">

            <TextView
                android:id="@+id/labelMaMonHocSV"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".35"
                android:text="Mã môn họ̣c"
                android:textColor="#040750"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtViewMaMonHocSV"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".65"
                android:text="CNTT-KTMT"
                android:textColor="#040750"
                android:textSize="20dp" />

        </TableRow>

        <TableRow
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="3dp">

            <TextView
                android:id="@+id/labelTenMonHocSV"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".35"
                android:text="Tên môn học"
                android:textColor="#040750"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtViewTenMonHocSV"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".65"
                android:text="Kiến trúc máy tính"
                android:textColor="#040750"
                android:textSize="20dp" />

        </TableRow>

        <TableRow
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="3dp">

            <TextView
                android:id="@+id/labelTenPhongHocSV"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".35"
                android:text="Tên lớp học"
                android:textColor="#040750"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtViewTenPhongHocSV"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".65"
                android:text="H6.03"
                android:textColor="#040750"
                android:textSize="20dp" />

        </TableRow>

        <TableRow
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="3dp">

            <TextView
                android:id="@+id/labelGioBatDauSV"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".3"
                android:text="Bắt đầu"
                android:textColor="#040750"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtViewGioBatDauSV"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".2"
                android:text="6:30PM"
                android:textColor="#040750"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/labelGioKetThucSV"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".3"
                android:paddingLeft="10dp"
                android:text="Kết thúc"
                android:textColor="#040750"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtViewGioKetThucSV"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".2"
                android:text="8:30PM"
                android:textColor="#040750"
                android:textSize="20dp" />

        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp">

            <Button
                android:id="@+id/btnQRSV"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/button_background"
                android:scaleType="centerInside"
                android:text="Quét mã QR"
                android:textColor="#040750"
                android:textSize="18dp"
                android:textStyle="bold" />
        </TableRow>

    </TableLayout>


</android.support.constraint.ConstraintLayout>