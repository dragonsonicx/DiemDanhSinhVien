<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:scrollbars="vertical">

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="false">

        <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/tableLichHoc"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:background="#000000"
            android:stretchColumns="1">

            <TableRow
                android:id="@+id/IUHRow"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#ffffff"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="100dp"
                    android:layout_height="101dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toTopOf="@+id/txtvDDSV"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.363"
                    app:srcCompat="@drawable/logo_iuh" />

            </TableRow>

            <TableRow
                android:id="@+id/rowCTDD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#ffffff">

                <TextView
                    android:id="@+id/txtViewTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp"
                    android:paddingBottom="20dp"
                    android:text="CHI TIẾT ĐIỂM DANH"
                    android:textAlignment="center"
                    android:textColor="#040750"
                    android:textSize="30dp"
                    android:textStyle="bold" />
            </TableRow>

            // Row thứ 2

            <TableRow
                android:id="@+id/ToolsRow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:paddingRight="10dp">

                <Spinner
                    android:id="@+id/spinDiemDanh"
                    android:layout_width="300dp"
                    android:layout_height="50dp"
                    android:background="#b0d6ff" />

                <Button
                    android:id="@+id/btnInDiemDanh"
                    android:layout_width="152dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/button_background"
                    android:text="In"
                    android:textColor="#ffffff"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btnCommit"
                    android:layout_width="152dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="50dp"
                    android:layout_marginBottom="25dp"
                    android:background="@drawable/button_background"
                    android:text="Commit"
                    android:textColor="#ffffff"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent" />

            </TableRow>

            <TableRow
                android:id="@+id/rowTitleDiemDanh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:orientation="vertical">


                // Row thứ 2 TableLayout Sáng Chiều Tối

                <TextView
                    android:id="@+id/txtTitleTen"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/ttgv_background"
                    android:padding="10px"
                    android:text="Tên sinh viên"
                    android:textAlignment="center"
                    android:textColor="#040750"
                    android:textSize="25dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtTitleMa"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/ttgv_background"
                    android:padding="10px"
                    android:text="Mã sinh viên"
                    android:textAlignment="center"
                    android:textColor="#040750"
                    android:textSize="25dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtTitleDiemDanh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ttgv_background"
                    android:padding="10px"
                    android:text="Điểm danh"
                    android:textAlignment="center"
                    android:textColor="#040750"
                    android:textSize="25dp"
                    android:textStyle="bold" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#ffffff"
                android:orientation="vertical">


                // Row thứ 2 TableLayout Sáng Chiều Tối

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/row_xem_lich_white"
                    android:padding="10px"
                    android:text="Phạm Nguyễn Minh Trí"
                    android:textAlignment="center"
                    android:textColor="#040750"
                    android:textSize="25dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/row_xem_lich_white"
                    android:padding="10px"
                    android:text="15022571"
                    android:textAlignment="center"
                    android:textColor="#040750"
                    android:textSize="25dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/row_xem_lich_white"
                    android:gravity="center">

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#ffffff"
                android:orientation="vertical">


                // Row thứ 2 TableLayout Sáng Chiều Tối

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/row_xem_lich_white"
                    android:padding="10px"
                    android:text="Nguyễn Minh Thiên"
                    android:textAlignment="center"
                    android:textColor="#040750"
                    android:textSize="25dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/row_xem_lich_white"
                    android:padding="10px"
                    android:text="15094631"
                    android:textAlignment="center"
                    android:textColor="#040750"
                    android:textSize="25dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/row_xem_lich_white"
                    android:gravity="center">

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#ffffff"
                android:orientation="vertical">


                // Row thứ 2 TableLayout Sáng Chiều Tối

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/row_xem_lich_white"
                    android:padding="10px"
                    android:text="Tì Văn Téo"
                    android:textAlignment="center"
                    android:textColor="#040750"
                    android:textSize="25dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/row_xem_lich_white"
                    android:padding="10px"
                    android:text="15011111"
                    android:textAlignment="center"
                    android:textColor="#040750"
                    android:textSize="25dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/row_xem_lich_white"
                    android:gravity="center">

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>


            </TableRow>

        </TableLayout>

    </HorizontalScrollView>

</ScrollView>